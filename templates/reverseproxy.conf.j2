upstream {{ item.name }}_backend  {
{% for upstream in item.upstreams %}
    server {{upstream.backend_address}}:{{upstream.backend_port}};
{% endfor %}
}

# HTTP Frontend with a redirection to HTTPS
server {

{% for port in item.listen | default(['80']) %}
   listen         {{ port }};
   listen    [::]:{{ port }};
{% endfor %}

   server_name    {{ item.domains | join(' ') }};

   location / {
      return         301 https://$server_name$request_uri;
   }

   location /.well-known/acme-challenge {
      alias /var/www/{{ item.name }}/.well-known/acme-challenge;
   }

   location /check {
      default_type application/json;
      return 200 '{"code":"1", "message": "Success"}';
   }

   access_log /var/log/nginx/{{ item.name }}_access.log;
   error_log /var/log/nginx/{{ item.name }}_error.log error;

}

# HTTPS Frontend with improved SSL/TLS Settings
server {
{% for port in item.listen_ssl | default(['443']) %}
   listen         {{ port }} ssl http2;
   listen    [::]:{{ port }} ssl http2;
{% endfor %}

   server_name    {{ item.domains | join(' ') }};

{% if nginx_ssl_certificate_state.stat.exists %}
   ssl_certificate {{ item.nginx_ssl_certificate }};
   ssl_certificate_key {{ item.nginx_ssl_certificate_key }};
{% else %}
   ssl_certificate /etc/ssl/certs/ssl-cert-snakeoil.pem;
   ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;
{% endif %}
   ssl_session_timeout 5m;
   ssl_protocols TLSv1.1 TLSv1.2;
   ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
   ssl_prefer_server_ciphers on;
   ssl_session_cache shared:SSL:10m;

   location /.well-known/acme-challenge {
      alias /var/www/{{ item.name }}/.well-known/acme-challenge;
   }

   location /{{ item.proxy_check.secret | default('') }}check {
      allow {{ item.proxy_check.allow_ip | default('127.0.0.1') }};
      deny all;
      default_type application/json;
      return 200 '{"code":"1", "message": "Success"}';
   }

{% if item.proxy_check.destionation is defined %}
   location /{{ item.proxy_check.secret| default('') }}proxy_check {
      allow {{ item.proxy_check.allow_ip | default('127.0.0.1') }};
      deny all;
      proxy_pass {{ item.backend_protocol | default('http') }}://{{ item.name }}_backend/{{ item.proxy_check.destionation }};
   }
{% endif %}

{% if item.locations is defined %}
{% for location in item.locations %}
   location {{ location.path }} {
      {% for config in location.config %}
      {{ config }}
      {% endfor %}
   }
{% endfor %}
{% else %}
   # No additional Locations defined
{% endif %}

   location / {
      {{ item.lua_action | default('# No LUA action defined') }}     
      gzip off;
      client_max_body_size {{ item.client_max_body_size | default('50M') }};
      proxy_read_timeout {{ item.proxy_read_timeout | default('360') }};
      proxy_buffer_size 128k;
      proxy_buffers 4 256k;
      proxy_busy_buffers_size 256k;
{% if item.conn_upgrade is defined and item.conn_upgrade %}
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
{% endif %}
      proxy_set_header Host $http_host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-Ssl on;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Frame-Options SAMEORIGIN;
      proxy_pass {{ item.backend_protocol | default('http') }}://{{ item.name }}_backend;
   }

   access_log /var/log/nginx/{{ item.name }}_access.log;
   error_log /var/log/nginx/{{ item.name }}_error.log error;

}
